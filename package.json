{
    "name": "bookswap_backend",
    "scripts": {
        "start": "node ./dist/server.js",
        "build": "tsc -p tsconfig.prod.json && tsc-alias",
        "build:watch": "npm run build && (concurrently \"tsc -p tsconfig.prod.json -w\" \"tsc-alias -w\")",
        "build:docker": "docker build -t bookswap_backend:latest . -f Dockerfile",
        "dev": "nodemon",
        "debug": "set DEBUG=* && nodemon",
        "format": "prettier --write ./src",
        "lint": "eslint . --ext .js,.ts,.json",
        "lint-fix": "eslint --fix . --ext .js,.ts,.json",
        "test": "jest --runInBand",
        "test:watch": "jest --runInBand --watchAll"
    },
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "connect-mongo": "^5.0.0",
        "cors": "^2.8.5",
        "envalid": "^7.3.1",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "google-auth-library": "^8.8.0",
        "i18n": "^0.15.1",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "7.3.1",
        "mongoose-paginate-v2": "^1.7.1",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.3",
        "socket.io": "^4.7.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.13",
        "@types/debug": "^4.1.8",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/i18n": "^0.13.6",
        "@types/jest": "^29.5.2",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.8",
        "@types/supertest": "^2.0.12",
        "@types/validator": "^13.7.17",
        "@typescript-eslint/eslint-plugin": "^5.60.0",
        "@typescript-eslint/parser": "^5.60.0",
        "concurrently": "^8.2.0",
        "debug": "^4.3.4",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "mongodb-memory-server": "^8.13.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.6",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    }
}
