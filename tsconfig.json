{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@authentication/*": [
        "src/authentication/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@validators/*": [
        "src/validators/*"
      ],
      "@exceptions/*": [
        "src/exceptions/*"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "src/**/*.ts",
    "**/test/**/*.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}